@inherits LayoutComponentBase

<ErrorBoundary>
    <ChildContent>
        <div class="sidebar">
            <NavMenu />
        </div>
        <div class="main">
            <div class="content px-4">
                @Body
            </div>
        </div>
    </ChildContent>
    <ErrorContent Context="error">
        <div class="alert alert-danger">
            Layout Error: @error.Message
        </div>
    </ErrorContent>
</ErrorBoundary>